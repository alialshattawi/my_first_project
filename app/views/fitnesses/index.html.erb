<p id="notice"><%= notice %></p>

<h1>Listing Fitnesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fitnesses.each do |fitness| %>
      <tr>
        <td><%= fitness.name %></td>
        <td><%= fitness.address %></td>
        <td><%= fitness.phone_number %></td>
        <td><%= fitness.latitude %></td>
        <td><%= fitness.longitude %></td>
        <td><%= link_to 'Show', fitness %></td>
        <td><%= link_to 'Edit', edit_fitness_path(fitness) %></td>
        <td><%= link_to 'Destroy', fitness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

